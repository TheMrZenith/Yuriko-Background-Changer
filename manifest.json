{
  "manifest_version": 3,
  "name": "Yuriko Background Changer",
  "version": "1.2",
  "description": "Cambia il background di img-right su AnimeWorld",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://animeworld.ac/*",
    "https://www.animeworld.ac/*"
  ],
  "action": {
    "default_icon": "assets/icon128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://animeworld.ac/*", "https://www.animeworld.ac/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "assets/icon128.png",
    "48": "assets/icon128.png",
    "128": "assets/icon128.png"
  }
}
